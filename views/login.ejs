<body class="flex flex-col min-h-screen">

  <div class="bg-zinc-900 w-full flex-grow bg-[url('https://wallpaper-house.com/data/out/7/wallpaper2you_199992.gif')] bg-center bg-cover p-10 text-white">
    <h3 class="text-3xl mb-5">Login Your Account</h3>
    <form action="/login" method="post" class="space-y-3">
      <input class="block px-3 py-2 outline-none bg-transparent border-2 border-zinc-800 rounded-md" type="text" placeholder="Email" name="email" />
      <input class="block px-3 py-2 outline-none bg-transparent border-2 border-zinc-800 rounded-md" type="password" placeholder="Password" name="password" />
      <input class="block px-5 py-2 bg-blue-500 rounded-md cursor-pointer" type="submit" value="Login Account" />
    </form>
  </div>

